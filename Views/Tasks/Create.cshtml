@model TaskManagement.Models.Task

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectId" class="control-label"></label>
                <br/>
                <select asp-for="ProjectId" class="form-control">
                    @foreach (var item in ViewBag.Projects)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" class="form-control">
                    @foreach (var item in ViewBag.Employees)
                    {
                        <option value="@item.Id">
                            @item.LastName @item.FirstName @item.MiddleName    @item.Email
                        </option>
                    }
                </select>
                @Html.ValidationMessageFor(m => m.AuthorId)
            </div>
            <div class="form-group">
                <label asp-for="ExecutorId" class="control-label"></label>
                <select asp-for="ExecutorId" class="form-control">
                    @foreach (var item in ViewBag.Employees)
                    {
                        <option value="@item.Id">
                            @item.LastName @item.FirstName @item.MiddleName    @item.Email
                        </option>
                    }
                </select>
                @Html.ValidationMessageFor(m => m.ExecutorId)
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <br/>
                <select asp-for="Status" class="form-control">
                    @foreach (var item in ViewBag.Status)
                    {
                        <option value="@item.Key">@item.Value</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <input asp-for="Priority" class="form-control" />
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
